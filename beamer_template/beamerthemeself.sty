%%
%% The following inserts a progressbar at the bottom
%% Ideas obtained from http://tex.stackexchange.com/questions/59742/progress-bar-for-latex-beamer
%%
\usepackage{tikz}
\usetikzlibrary{calc}

\def\progressbar{}
\newdimen\pbarht
\newdimen\pbartmp
\pbarht = 3pt

% the progress bar
\def\progressbar{%
    \pbartmp    = \linewidth
    \multiply   \pbartmp by \insertframenumber
    \divide     \pbartmp by \inserttotalframenumber
    \begin{tikzpicture}
        \draw[white, line width=\pbarht]
            (0pt, 0pt) rectangle ++ (\linewidth, \pbarht);
        \draw[blue!5, line width=\pbarht]
            (0pt, 0pt) -- ++ (\pbartmp - \pbarht,0pt);
        \node[circle, radius=3pt, fill=blue!5, text=black!40] at  %
            (\the\dimexpr\pbartmp\relax, -0.04\pbarht) %
            {\insertframenumber};
        \node[circle, draw, color=blue!10, text=black!20] at     %
            (\the\linewidth, -0.04\pbarht)  %
            {\inserttotalframenumber};
    \end{tikzpicture}%
}
\addtobeamertemplate{footline}{}
{%
  \begin{beamercolorbox}[wd=\paperwidth,ht=3ex,center,dp=0.5ex]{white}%
    \progressbar%
  \end{beamercolorbox}%
}
